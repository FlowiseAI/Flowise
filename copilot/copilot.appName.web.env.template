# ==================================================
# WEB SERVICE AUTH0 CONFIGURATION
# ==================================================
# Auth0 settings for Next.js web application OAuth flow and session management
AUTH0_JWKS_URI=
AUTH0_ISSUER_BASE_URL=  # Required: OAuth issuer URL
AUTH0_BASE_URL=  # Required: Should match CLIENT_DOMAIN from deployment
AUTH0_AUDIENCE=  # Required: API audience for token validation
AUTH0_SCOPE="openid profile email"
AUTH0_TOKEN_SIGN_ALG=RS256
AUTH0_DOMAIN=
AUTH0_ORGANIZATION_ID=
AUTH0_CLIENT_ID=  # Required: OAuth client ID for login flow
AUTH0_CLIENT_SECRET=  # Required: OAuth client secret for login flow

# Auth0 Secret: 32-byte hex-encoded secret for session cookie encryption
# Used for web app session management and must match Flowise server
# Generate with: openssl rand -hex 32
AUTH0_SECRET=  # Required: Must be same as Flowise server

# ==================================================
# ADDITIONAL CONFIGURATION
# ==================================================
# Feature flags and debugging
FLAGSMITH_ENVIRONMENT_ID=

# Debug settings (disable in production)
DEBUG=false
VERBOSE=false
AUTH0_DEBUG=false
LOG_LEVEL=warn
