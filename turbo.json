{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "test": {
            "dependsOn": ["^build"]
        },
        "test:coverage": {
            "dependsOn": ["^build"]
        },
        "dev": {
            "cache": false
        }
    }
}
