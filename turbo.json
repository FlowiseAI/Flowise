{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "ANALYZE",
        "ATLASSIAN_CLIENT_ID",
        "ATLASSIAN_CLIENT_SECRET",
        "AUTH0_AUDIENCE",
        "AUTH0_BASE_URL",
        "AUTH0_CLIENT_ID",
        "AUTH0_CLIENT_SECRET",
        "AUTH0_ISSUER_BASE_URL",
        "AUTH0_JWKS_URI",
        "AUTH0_SCOPE",
        "AUTH0_SECRET",
        "AUTH0_TOKEN_SIGN_ALG",
        "AWS_ACCESS_KEY_ID",
        "AWS_S3_BUCKET",
        "AWS_S3_REGION",
        "AWS_SECRET_ACCESS_KEY",
        "CHATFLOW_DOMAIN_OVERRIDE",
        "DATABASE_PORT",
        "DATABASE_URL",
        "DATABASE_URL",
        "DB_STUDIO_SERVER_URL",
        "DEBUG_LEVEL",
        "DISABLE_SENTRY",
        "FLAGSMITH_ENVIRONMENT_ID",
        "FLOWISE_DOMAIN",
        "GITHUB_ID",
        "GITHUB_SECRET",
        "GOOGLE_CLIENT_SECRET",
        "INNGEST_EVENT_KEY",
        "INNGEST_SERVER_URL",
        "INNGEST_SIGNING_KEY",
        "LANGCHAIN_HANDLER",
        "NEXT_PUBLIC_DOMAIN",
        "NEXTAUTH_URL",
        "OPENAI_API_KEY",
        "PERCY_TOKEN",
        "PINECONE_API_KEY",
        "PINECONE_ENVIRONMENT",
        "PINECONE_INDEX",
        "PROMPT_LAYER_API_KEY",
        "REDIS_URL",
        "SLACK_CLIENT_ID",
        "SLACK_CLIENT_SECRET",
        "VITE_API_URL",
        "VITE_APP_URL",
        "NEXT_PUBLIC_GOOGLE_DEVELOPER_KEY",
        "NEXT_PUBLIC_GOOGLE_CLIENT_ID",
        "BILLING_STRIPE_SECRET_KEY",
        "BILLING_STRIPE_WEBHOOK_SECRET",
        "BILLING_STRIPE_METER_PREFIX",
        "CREDIT_RATE",
        "_API_KEY",
        "LANGFUSE_SECRET_KEY",
        "LANGFUSE_PUBLIC_KEY",
        "LANGFUSE_HOST",
        "SALESFORCE_CLIENT_ID",
        "SALESFORCE_CLIENT_SECRET",
        "SALESFORCE_INSTANCE_URL"
    ],

    "pipeline": {
        "//#dev-docker": {
            "cache": false
        },
        "//#dev-inngest": {
            "cache": false
        },
        "//#dev-langchain": {
            "cache": false
        },
        "//#db:healthcheck": {
            "cache": false
        },
        "//#db:studio": {
            "cache": false
        },
        "flowise-components:build": {
            "cache": false,
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**", ".next/**"]
        },
        "flowise-components:dev": {
            "cache": false
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**", ".next/**"],

            "outputMode": "new-only"
        },
        "test:auth": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**", ".next/**"],
            "outputMode": "new-only"
        },
        "db:generate": {
            "dependsOn": ["db:deploy"],
            "outputs": ["dist/**", "generated/**"]
        },
        "db:migrate": {
            "cache": false,
            "dependsOn": [],
            "outputs": []
        },
        "db:deploy": {
            "cache": false,
            "dependsOn": [],
            "outputs": ["dist/**"]
        },
        "db#build": {
            "cache": false,
            "outputs": ["dist/**", "generated/**"],
            "outputMode": "new-only"
        },
        "db#dev": {
            "dependsOn": ["//#db:healthcheck", "build"],
            "cache": false,
            "outputs": ["dist/**"]
        },
        "web#build": {
            "dependsOn": ["^build", "db#build"],
            "outputs": ["dist/**", ".next/**"],

            "outputMode": "new-only"
        },
        "lint": {
            "outputs": []
        },
        "start": {
            "dependsOn": ["^build", "build"],
            "outputs": ["dist/**", ".next/**"],
            "cache": false
        },
        "dev": {
            "dependsOn": ["^build"],
            "cache": false
        },
        "test": {},
        "typeorm:migration-run": {
            "cache": false
        },
        "typeorm:migration-generate": {
            "cache": false
        },
        "typeorm:migration-show": {
            "cache": false
        }
    }
}
